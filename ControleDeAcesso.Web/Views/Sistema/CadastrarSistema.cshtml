@model ControleDeAcesso.Dominio.Sistema

@{
    ViewBag.Title = "Cadastrar Sistema";
}

<div class="container">
    <h2>Cadastrar Sistema</h2>
    <hr />
</div>

<div class="container">

    <div class="row">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal pull-left">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @*<div class="form-group">
                        @Html.LabelFor(model => model.idSistema, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.idSistema, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.idSistema, "", new { @class = "text-danger" })
                        </div>
                    </div>*@

                <div class="container">
                    <div class="form-group">
                        <div>
                            @Html.LabelFor(model => model.Nome)
                        </div>
                        <div>
                            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @placeholder="Digite o nome" } })
                            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div>
                            @Html.LabelFor(model => model.Descricao)
                        </div>
                        <div>
                            @Html.TextAreaFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control", @placeholder="Digite a descrição" } })
                            @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div>
                            <input type="submit" value="Cadastrar" class="btn btn-primary" />
                            @Html.ActionLink("Voltar", "HomeSistema", "Sistema", new { @class = "btn btn-primary" })

                        </div>
                    </div>
                </div>
            </div>
        }



    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
