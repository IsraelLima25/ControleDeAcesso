@model IEnumerable<ControleDeAcesso.Dominio.Usuario>

@{
    ViewBag.Title = "HomeUsuario";
}

<h2>@ViewBag.Titulo</h2>
<hr />

<p>
    @Html.ActionLink("Novo Usuario", "CadastroUsuario", "Usuario", new { @class = "btn btn-primary pull-right" })
</p>
<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idUsuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.senha)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.senha)
            </td>
            <td>
                @Html.ActionLink("Alterar", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Detalhar", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Excluir", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>
